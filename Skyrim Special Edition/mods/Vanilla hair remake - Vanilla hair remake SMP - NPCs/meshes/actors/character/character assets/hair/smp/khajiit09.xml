<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.5</linearDamping>
    <angularDamping>0.5</angularDamping>
  </bone-default>
  
  <bone name="JG Khajiit09 Top1 L"/>
  <bone name="JG Khajiit09 Top1 R"/>

  <bone-default>
    <mass>0.03</mass>
    <inertia x="3" y="1" z="3"/>
    <linearDamping>0</linearDamping>
    <angularDamping>0</angularDamping>
  </bone-default>

  <bone name="JG Khajiit09 Braid01"/>
  <bone name="JG Khajiit09 Braid02"/>
  <bone name="JG Khajiit09 Braid04"/>
  <bone name="JG Khajiit09 Braid05"/>
  <bone name="JG Khajiit09 Braid06"/>
  <bone name="JG Khajiit09 Braid07"/>
  <bone name="JG Khajiit09 Braid09"/>
  <bone name="JG Khajiit09 Braid10"/>

  <bone-default>
    <mass>0</mass>
  </bone-default>
  
  <generic-constraint-default name="top_left">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-5" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularLowerLimit x="0" y="0" z="-0.6"/>
    <angularUpperLimit x="0.6" y="0" z="0"/>
    <angularStiffness x="5" y="1" z="5"/>
    <angularDamping x="10" y="1" z="10"/>
  </generic-constraint-default>
  
  <generic-constraint-default name="top_right" extends="top_left">
    <angularLowerLimit x="0" y="0" z="0"/>
    <angularUpperLimit x="0.6" y="0" z="0.6"/>
  </generic-constraint-default>

  <generic-constraint-default name="braid">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-5" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="1"/>
    <angularStiffness x="5" y="1" z="10"/>
    <angularDamping x="10" y="0" z="10"/>
  </generic-constraint-default>

  <generic-constraint bodyA="JG Khajiit09 Top1 L" bodyB="NPC Head [Head]" template="top_left" />
  <generic-constraint bodyA="JG Khajiit09 Top1 R" bodyB="NPC Head [Head]" template="top_right" />
  
  <generic-constraint bodyA="JG Khajiit09 Braid01" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid02" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid04" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid05" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid06" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid07" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid09" bodyB="NPC Head [Head]" template="braid"/>
  <generic-constraint bodyA="JG Khajiit09 Braid10" bodyB="NPC Head [Head]" template="braid"/>
  
</system>