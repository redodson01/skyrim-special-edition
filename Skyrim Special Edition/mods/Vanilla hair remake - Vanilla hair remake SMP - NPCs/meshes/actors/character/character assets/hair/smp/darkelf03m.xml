<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="description.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.99</linearDamping>
    <angularDamping>0.99</angularDamping>
  </bone-default>

  <bone name="JG DE03 Ear1 L" />
  <bone name="JG DE03 Ear2 L" />
  <bone name="JG DE03 Ear1 R" />
  <bone name="JG DE03 Ear2 R" />

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.95</linearDamping>
    <angularDamping>0.95</angularDamping>
  </bone-default>

  <bone name="JG DE03 Tail1 L" />
  <bone name="JG DE03 Tail2 L" />
  <bone name="JG DE03 Tail1 R" />
  <bone name="JG DE03 Tail2 R" />

  <bone-default>
    <mass>0</mass>
  </bone-default>


  <generic-constraint-default name="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.5" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="1" y="1" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="ear" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-2.5" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="tailL" extends="base">
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="0.2"/>
  </generic-constraint-default>
  
  <generic-constraint-default name="tailR" extends="base">
    <angularLowerLimit x="0" y="0" z="-0.2"/>
    <angularUpperLimit x="1" y="0" z="1"/>
  </generic-constraint-default>

  <constraint-group>
    <generic-constraint bodyA="JG DE03 Ear1 L" bodyB="NPC Head [Head]" template="ear" />
    <generic-constraint bodyA="JG DE03 Ear2 L" bodyB="JG DE03 Ear1 L" template="ear" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE03 Ear1 R" bodyB="NPC Head [Head]" template="ear" />
    <generic-constraint bodyA="JG DE03 Ear2 R" bodyB="JG DE03 Ear1 R" template="ear" />
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1 L" bodyB="NPC Head [Head]" template="tailL" />
    <generic-constraint bodyA="JG DE03 Tail2 L" bodyB="JG DE03 Tail1 L" template="tailL" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1 R" bodyB="NPC Head [Head]" template="tailR" />
    <generic-constraint bodyA="JG DE03 Tail2 R" bodyB="JG DE03 Tail1 R" template="tailR" />
  </constraint-group>


</system>