<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.03</mass>
    <inertia x="3" y="1" z="3"/>
    <linearDamping>0</linearDamping>
    <angularDamping>0</angularDamping>
  </bone-default>

  <bone name="JG Khajiit05 LB1"/>
  <bone name="JG Khajiit05 LS1 L"/>
  <bone name="JG Khajiit05 LS1 R"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0</linearDamping>
    <angularDamping>0</angularDamping>
    <gravity-factor>1</gravity-factor>
  </bone-default>

  <bone name="JG Khajiit05 UB1"/>
  <bone name="JG Khajiit05 US1 L"/>
  <bone name="JG Khajiit05 US1 R"/>

  <bone name="JG Khajiit05 LB2"/>
  <bone name="JG Khajiit05 LS2 L"/>
  <bone name="JG Khajiit05 LS2 R"/>

  <bone-default>
    <mass>0</mass>
  </bone-default>

  
  <generic-constraint-default name="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-5" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="1"/>
    <angularStiffness x="1" y="1" z="1"/>
    <angularDamping x="3" y="0" z="3"/>
  </generic-constraint-default>

  <generic-constraint-default name="tail_base" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.5" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.6"/>
    <angularUpperLimit x="0.6" y="0" z="0.6"/>
    <angularStiffness x="10" y="1" z="10"/>
    <angularDamping x="10" y="0" z="10"/>
  </generic-constraint-default>

  <generic-constraint-default name="tail" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.5" z="0"/>
    </frameInA>
  </generic-constraint-default>

  <generic-constraint bodyA="JG Khajiit05 UB1" bodyB="NPC Head [Head]" template="base"/>
  <generic-constraint bodyA="JG Khajiit05 US1 L" bodyB="NPC Head [Head]" template="base"/>
  <generic-constraint bodyA="JG Khajiit05 US1 R" bodyB="NPC Head [Head]" template="base"/>

  <constraint-group>
    <generic-constraint bodyA="JG Khajiit05 LB1" bodyB="NPC Head [Head]" template="tail_base"/>
    <generic-constraint bodyA="JG Khajiit05 LB2" bodyB="JG Khajiit05 LB1" template="tail"/>
  </constraint-group>
  
  <constraint-group>
    <generic-constraint bodyA="JG Khajiit05 LS1 L" bodyB="NPC Head [Head]" template="tail_base"/>
    <generic-constraint bodyA="JG Khajiit05 LS2 L" bodyB="JG Khajiit05 LS1 L" template="tail"/>
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG Khajiit05 LS1 R" bodyB="NPC Head [Head]" template="tail_base"/>
    <generic-constraint bodyA="JG Khajiit05 LS2 R" bodyB="JG Khajiit05 LS1 R" template="tail"/>
  </constraint-group>

</system>