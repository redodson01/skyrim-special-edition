<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.9</linearDamping>
    <angularDamping>0.9</angularDamping>
  </bone-default>
  
  <bone name="JG Orc TailL 1 L" />
  <bone name="JG Orc TailL 2 L" />
  <bone name="JG Orc TailL 1 R" />
  <bone name="JG Orc TailL 2 R" />
  <bone name="JG Orc TailL 1 C" />
  <bone name="JG Orc TailL 2 C" />

  <bone-default>
    <mass>0</mass>
  </bone-default>

  <generic-constraint-default name="tail">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.0" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="10" y="1" z="10"/>
  </generic-constraint-default>

  <generic-constraint-default name="left" extends="tail">
    <angularLowerLimit x="0" y="0" z="-1.5"/>
    <angularUpperLimit x="0.3" y="0" z="0.3"/>
  </generic-constraint-default>
  
  <generic-constraint-default name="right" extends="tail">
    <angularLowerLimit x="0" y="0" z="-0.3"/>
    <angularUpperLimit x="0.3" y="0" z="1.5"/>
  </generic-constraint-default>
  
  <generic-constraint-default name="centre" extends="tail">
    <angularLowerLimit x="0" y="0" z="-0.3"/>
    <angularUpperLimit x="1.5" y="0" z="0.3"/>
  </generic-constraint-default>

  <constraint-group>
    <generic-constraint bodyA="JG Orc TailL 1 L" bodyB="NPC Head [Head]" template="left"/>
    <generic-constraint bodyA="JG Orc TailL 2 L" bodyB="JG Orc TailL 1 L" template="left"/>
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Orc TailL 1 R" bodyB="NPC Head [Head]" template="right"/>
    <generic-constraint bodyA="JG Orc TailL 2 R" bodyB="JG Orc TailL 1 R" template="right"/>
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Orc TailL 1 C" bodyB="NPC Head [Head]" template="centre"/>
    <generic-constraint bodyA="JG Orc TailL 2 C" bodyB="JG Orc TailL 1 C" template="centre"/>
  </constraint-group>
	
</system>