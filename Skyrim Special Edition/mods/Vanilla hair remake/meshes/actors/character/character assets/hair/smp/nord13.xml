<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.9</linearDamping>
    <angularDamping>0.9</angularDamping>
  </bone-default>

  <bone name="JG Hair13 FS1 L" />
  <bone name="JG Hair13 FS2 L" />
  <bone name="JG Hair13 FS1 R" />
  <bone name="JG Hair13 FS2 R" />
  <bone name="JG Hair13 F1 L" />
  <bone name="JG Hair13 F1 R" />

  <bone-default>
    <linearDamping>0.5</linearDamping>
    <angularDamping>0.5</angularDamping>
  </bone-default>

  <bone name="JG Hair13 S1 L" />
  <bone name="JG Hair13 S2 L" />
  <bone name="JG Hair13 S1 R" />
  <bone name="JG Hair13 S2 R" />
  <bone name="JG Hair13 B1" />
  <bone name="JG Hair13 B2" />

  <bone-default>
    <mass>0.03</mass>
    <inertia x="3" y="1" z="3"/>
    <linearDamping>0</linearDamping>
    <angularDamping>0</angularDamping>
  </bone-default>

  <bone name="JG Hair13 Braid1" />
  <bone name="JG Hair13 Braid2" />
  <bone name="JG Hair13 Braid3" />

  <bone-default>
    <mass>0</mass>
  </bone-default>

  <generic-constraint-default name="base">
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="1" y="1" z="1"/>
    <angularDamping x="5" y="0" z="5"/>
  </generic-constraint-default>

  <generic-constraint-default name="front_side" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-2.5" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.6"/>
    <angularUpperLimit x="0.6" y="0" z="0.6"/>
  </generic-constraint-default>

  <generic-constraint-default name="front" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-4" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="side" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.25" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.5"/>
    <angularUpperLimit x="0.6" y="0" z="0.5"/>
  </generic-constraint-default>

  <generic-constraint-default name="back" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-4" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.8"/>
    <angularUpperLimit x="0.2" y="0" z="0.8"/>
  </generic-constraint-default>

  <generic-constraint-default name="braid" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-4" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.8"/>
    <angularUpperLimit x="0.8" y="0" z="0.8"/>
    <angularStiffness x="5" y="1" z="5"/>
    <angularDamping x="10" y="0" z="20"/>
  </generic-constraint-default>

  <generic-constraint bodyA="JG Hair13 F1 R" bodyB="NPC Head [Head]" template="front"/>
  <generic-constraint bodyA="JG Hair13 F1 L" bodyB="NPC Head [Head]" template="front"/>
  <constraint-group>
    <generic-constraint bodyA="JG Hair13 FS1 L" bodyB="NPC Head [Head]" template="front_side"/>
    <generic-constraint bodyA="JG Hair13 FS2 L" bodyB="JG Hair13 FS1 L" template="front_side"/>
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair13 FS1 R" bodyB="NPC Head [Head]" template="front_side"/>
    <generic-constraint bodyA="JG Hair13 FS2 R" bodyB="JG Hair13 FS1 R" template="front_side"/>
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG Hair13 S1 L" bodyB="NPC Head [Head]" template="side"/>
    <generic-constraint bodyA="JG Hair13 S2 L" bodyB="JG Hair13 S1 L" template="side"/>
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair13 S1 R" bodyB="NPC Head [Head]" template="side"/>
    <generic-constraint bodyA="JG Hair13 S2 R" bodyB="JG Hair13 S1 R" template="side"/>
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair13 B1" bodyB="NPC Head [Head]" template="back"/>
    <generic-constraint bodyA="JG Hair13 B2" bodyB="JG Hair13 B1" template="back"/>
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG Hair13 Braid1" bodyB="NPC Head [Head]" template="braid"/>
    <generic-constraint bodyA="JG Hair13 Braid2" bodyB="JG Hair13 Braid1" template="braid"/>
    <generic-constraint bodyA="JG Hair13 Braid3" bodyB="JG Hair13 Braid2" template="braid"/>
  </constraint-group>

</system>