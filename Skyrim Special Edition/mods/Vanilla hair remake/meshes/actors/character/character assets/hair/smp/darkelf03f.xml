<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.99</linearDamping>
    <angularDamping>0.99</angularDamping>
  </bone-default>

  <bone name="JG DE03 F1 L" />
  <bone name="JG DE03 F2 L" />
  <bone name="JG DE03 F1 R" />
  <bone name="JG DE03 F2 R" />

  <bone-default>
    <linearDamping>0.9</linearDamping>
    <angularDamping>0.9</angularDamping>
  </bone-default>

  <bone name="JG DE03 Tail1A L" />
  <bone name="JG DE03 Tail1B L" />
  <bone name="JG DE03 Tail1A R" />
  <bone name="JG DE03 Tail1B R" />

  <bone name="JG DE03 Tail2A L" />
  <bone name="JG DE03 Tail2B L" />
  <bone name="JG DE03 Tail2A R" />
  <bone name="JG DE03 Tail2B R" />

  <bone-default>
    <mass>0</mass>
  </bone-default>

  <generic-constraint-default name="ear">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-2.5" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularLowerLimit x="0" y="0" z="-1"/>
    <angularUpperLimit x="1" y="0" z="1"/>
    <angularStiffness x="1" y="1" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="tail">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-2" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="1" y="1" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="tail_pos" extends="tail">
    <angularLowerLimit x="0" y="0" z="-0.2" />
    <angularUpperLimit x="1" y="0" z="1" />
  </generic-constraint-default>

  <generic-constraint-default name="tail_neg" extends="tail">
    <angularLowerLimit x="0" y="0" z="-1" />
    <angularUpperLimit x="1" y="0" z="0.2" />
  </generic-constraint-default>


  <constraint-group>
    <generic-constraint bodyA="JG DE03 F1 L" bodyB="NPC Head [Head]" template="ear" />
    <generic-constraint bodyA="JG DE03 F2 L" bodyB="JG DE03 F1 L" template="ear" />
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG DE03 F1 R" bodyB="NPC Head [Head]" template="ear" />
    <generic-constraint bodyA="JG DE03 F2 R" bodyB="JG DE03 F1 R" template="ear" />
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1A L" bodyB="NPC Head [Head]" template="tail_neg" />
    <generic-constraint bodyA="JG DE03 Tail2A L" bodyB="JG DE03 Tail1A L" template="tail_neg" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1B L" bodyB="NPC Head [Head]" template="tail_pos" />
    <generic-constraint bodyA="JG DE03 Tail2B L" bodyB="JG DE03 Tail1B L" template="tail_pos" />
  </constraint-group>

  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1A R" bodyB="NPC Head [Head]" template="tail_pos" />
    <generic-constraint bodyA="JG DE03 Tail2A R" bodyB="JG DE03 Tail1A R" template="tail_pos" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE03 Tail1B R" bodyB="NPC Head [Head]" template="tail_neg" />
    <generic-constraint bodyA="JG DE03 Tail2B R" bodyB="JG DE03 Tail1B R" template="tail_neg" />
  </constraint-group>
	
</system>