<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.95</linearDamping>
    <angularDamping>0.95</angularDamping>
  </bone-default>

  <bone name="JG DE05 F1 L" />
  <bone name="JG DE05 F2 L" />
  <bone name="JG DE05 S1 L" />
  <bone name="JG DE05 S2 L" />
  <bone name="JG DE05 F1 R" />
  <bone name="JG DE05 F2 R" />
  <bone name="JG DE05 S1 R" />
  <bone name="JG DE05 S2 R" />
  <bone name="JG DE05 B1" />
  <bone name="JG DE05 B2" />

  <bone-default>
    <mass>0</mass>
  </bone-default>

  <generic-constraint-default name="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.75" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="1" y="1" z="1"/>
  </generic-constraint-default>

  <generic-constraint-default name="frontL" extends="base">
    <angularLowerLimit x="0" y="0" z="-0.2"/>
    <angularUpperLimit x="0.7" y="0" z="0.7"/>
  </generic-constraint-default>

  <generic-constraint-default name="frontR" extends="base">
    <angularLowerLimit x="0" y="0" z="-0.7"/>
    <angularUpperLimit x="0.7" y="0" z="0.2"/>
  </generic-constraint-default>
  
  <generic-constraint-default name="side" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.2"/>
    <angularUpperLimit x="0.4" y="0" z="0.2"/>
  </generic-constraint-default>

  <generic-constraint-default name="back" extends="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-2.5" z="0"/>
    </frameInA>
    <angularLowerLimit x="0" y="0" z="-0.4"/>
    <angularUpperLimit x="0.1" y="0" z="0.4"/>
  </generic-constraint-default>

  <constraint-group>
    <generic-constraint bodyA="JG DE05 F1 L" bodyB="NPC Head [Head]" template="frontL" />
    <generic-constraint bodyA="JG DE05 F2 L" bodyB="JG DE05 F1 L" template="frontL" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE05 S1 L" bodyB="NPC Head [Head]" template="side" />
    <generic-constraint bodyA="JG DE05 S2 L" bodyB="JG DE05 S1 L" template="side" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE05 F1 R" bodyB="NPC Head [Head]" template="frontR" />
    <generic-constraint bodyA="JG DE05 F2 R" bodyB="JG DE05 F1 R" template="frontR" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE05 S1 R" bodyB="NPC Head [Head]" template="side" />
    <generic-constraint bodyA="JG DE05 S2 R" bodyB="JG DE05 S1 R" template="side" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG DE05 B1" bodyB="NPC Head [Head]" template="back" />
    <generic-constraint bodyA="JG DE05 B2" bodyB="JG DE05 B1" template="back" />
  </constraint-group>
	
</system>