<system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="FSMP-Validator"
xsi:schemaLocation="FSMP-Validator I:/mods/utils/hdtSMP64.xsd">

  <bone name="NPC Head [Head]"/>

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.8</linearDamping>
    <angularDamping>0.8</angularDamping>
  </bone-default>

  <bone name="JG Hair18 F1 L" />
  <bone name="JG Hair18 F2 L" />
  <bone name="JG Hair18 F3 L" />
  <bone name="JG Hair18 F1 R" />
  <bone name="JG Hair18 F2 R" />
  <bone name="JG Hair18 F3 R" />

  <bone-default>
    <mass>0.01</mass>
    <inertia x="1" y="1" z="1"/>
    <linearDamping>0.5</linearDamping>
    <angularDamping>0.5</angularDamping>
  </bone-default>
  
  <bone name="JG Hair18 B1 L" />
  <bone name="JG Hair18 B2 L" />
  <bone name="JG Hair18 B3 L" />
  <bone name="JG Hair18 B1 R" />
  <bone name="JG Hair18 B2 R" />
  <bone name="JG Hair18 B3 R" />

  <bone-default>
    <mass>0</mass>
  </bone-default>

  <generic-constraint-default name="base">
    <frameInA>
      <basis x="0" y="0" z="0" w="1"/>
      <origin x="0" y="-3.33" z="0"/>
    </frameInA>
    <useLinearReferenceFrameA>false</useLinearReferenceFrameA>
    <linearLowerLimit x="0" y="0" z="0"/>
    <linearUpperLimit x="0" y="0" z="0"/>
    <angularStiffness x="1" y="1" z="1"/>
    <angularDamping x="10" y="1" z="10"/>
    <angularLowerLimit x="0" y="0" z="-0.6"/>
    <angularUpperLimit x="0.6" y="0" z="0.6"/>
  </generic-constraint-default>

  <generic-constraint-default name="back_left" extends="base">
    <angularLowerLimit x="0" y="0" z="-0.75"/>
    <angularUpperLimit x="0.3" y="0" z="0.1"/>
  </generic-constraint-default>

  <generic-constraint-default name="back_right" extends="base">
    <angularLowerLimit x="0" y="0" z="-0.1"/>
    <angularUpperLimit x="0.3" y="0" z="0.75"/>
  </generic-constraint-default>

  <constraint-group>
    <generic-constraint bodyA="JG Hair18 F1 L" bodyB="NPC Head [Head]" template="base" />
    <generic-constraint bodyA="JG Hair18 F2 L" bodyB="JG Hair18 F1 L" template="base" />
    <generic-constraint bodyA="JG Hair18 F3 L" bodyB="JG Hair18 F2 L" template="base" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair18 F1 R" bodyB="NPC Head [Head]" template="base" />
    <generic-constraint bodyA="JG Hair18 F2 R" bodyB="JG Hair18 F1 R" template="base" />
    <generic-constraint bodyA="JG Hair18 F3 R" bodyB="JG Hair18 F2 R" template="base" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair18 B1 L" bodyB="NPC Head [Head]" template="back_left" />
    <generic-constraint bodyA="JG Hair18 B2 L" bodyB="JG Hair18 B1 L" template="back_left" />
    <generic-constraint bodyA="JG Hair18 B3 L" bodyB="JG Hair18 B2 L" template="back_left" />
  </constraint-group>
  <constraint-group>
    <generic-constraint bodyA="JG Hair18 B1 R" bodyB="NPC Head [Head]" template="back_right" />
    <generic-constraint bodyA="JG Hair18 B2 R" bodyB="JG Hair18 B1 R" template="back_right" />
    <generic-constraint bodyA="JG Hair18 B3 R" bodyB="JG Hair18 B2 R" template="back_right" />
  </constraint-group>
	
</system>