{
    "modName": "ShovelBody",
    "displayName": "$ShovelsBuryBodies",
    "minMcmVersion": 9,
    "pluginRequirements": [],
    "cursorFillMode": "topToBottom",
    "content": [],
    "customContent": {},
    "pages": [
        {
            "pageDisplayName": "$Configuration_Page",
            "cursorFillMode": "topToBottom",
            "content": [
                {
                    "id": "fBurialDuration:Configuration",
                    "type": "slider",
                    "text": "$BurialDuration",
                    "help": "$BurialDurationConfiguration_Help",
                    "valueOptions": {
                        "min": 1,
                        "max": 300,
                        "step": 0.5,
                        "defaultValue": 14,
                        "sourceType": "ModSettingFloat",
                        "formatString": "{1}s"
                    }
                },
                {
                    "type": "header",
                    "text": "$BuriedBodies_Header"
                }
            ]
        },
        {
            "pageDisplayName": "$Maintenance_Page",
            "cursorFillMode": "topToBottom",
            "content": [
                {
                    "type": "header",
                    "text": "$AutoloadSettings_Header"
                },
                {
                    "id": "bEnabled:Maintenance",
                    "type": "toggle",
                    "text": "$Enabled",
                    "help": "$EnabledMaintenance_Help",
                    "valueOptions": {
                        "sourceType": "ModSettingBool",
                        "defaultValue": true
                    }
                },
                {
                    "id": "iLoadingDelay:Maintenance",
                    "type": "slider",
                    "text": "$LoadingDelay",
                    "help": "$LoadingDelayMaintenance_Help",
                    "valueOptions": {
                        "min": 0,
                        "max": 600,
                        "step": 1,
                        "defaultValue": 0,
                        "sourceType": "ModSettingInt",
                        "formatString": "{0}"
                    }
                },
                {
                    "id": "sLoadSettings:Maintenance",
                    "type": "text",
                    "text": "$LoadSettings",
                    "help": "$LoadSettingsMaintenance_Help",
                    "valueOptions": {
                        "sourceType": "ModSettingString",
                        "defaultValue": ""
                    },
                    "action": {
                        "type": "CallFunction",
                        "function": "Load"
                    }
                },
                {
                    "id": "sResetSettings:Maintenance",
                    "type": "text",
                    "text": "$ResetSettings",
                    "help": "$ResetSettingsMaintenance_Help",
                    "valueOptions": {
                        "sourceType": "ModSettingString",
                        "defaultValue": ""
                    },
                    "action": {
                        "type": "CallFunction",
                        "function": "Default"
                    }
                },
                {
                    "id": "bLoadSettingsonReload:Maintenance",
                    "type": "toggle",
                    "text": "$LoadSettingsonReload",
                    "help": "$LoadSettingsonReloadMaintenance_Help",
                    "valueOptions": {
                        "sourceType": "ModSettingBool",
                        "defaultValue": false
                    }
                },
                {
                    "id": "bVerbose:Maintenance",
                    "type": "toggle",
                    "text": "$Verbose",
                    "help": "$VerboseMaintenance_Help",
                    "valueOptions": {
                        "sourceType": "ModSettingBool",
                        "defaultValue": false
                    }
                }
            ]
        }
    ]
}